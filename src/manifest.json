{
  "version": "0.0.3",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon_19.png",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "description": "__MSG_mp_description__",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "name": "__MSG_mp_name__",
  "permissions": [
    "tabs",
    "alarms",
    "*://*.motesplatsen.se/"
   ],
   "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
